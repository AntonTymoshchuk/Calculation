<Window x:Class="Calculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculation"
        mc:Ignorable="d"
        Title="MainWindow" Width="600" Height="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="ExpressionTextBox" Grid.Row="0" FontSize="18"
                 HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0"/>
        <TextBlock x:Name="ResultTextBlock" Grid.Row="1" FontSize="24"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="CalculateButton" Grid.Row="2" Width="300" Height="40"
                FontSize="20" Content="Calculate" Click="CalculateButton_Click"/>
    </Grid>
</Window>
